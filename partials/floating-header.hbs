<div class="floating-header">
    <div class="floating-header-logo">
        <a href="{{@blog.url}}">
            {{#if @blog.icon}}
                <img src="{{@blog.icon}}" alt="{{@blog.title}} icon" />
            {{/if}}
            <span>{{@blog.title}}</span>
        </a>
    </div>
    <span class="floating-header-divider">&mdash;</span>
    <div class="floating-header-title">{{title}}</div>
    <div class="floating-header-share">
        <div class="floating-header-share-label">Share this {{> "icons/point"}}</div>
                <a class="floating-header-share-qq" href="//sns.qzone.qq.com/cgi-bin/qzshare/cgi_qzshare_onekey?summary={{encode title}}&url={{url absolute="true"}}&pics={{image_url absolute="true"}}"
            onclick="=window.open(this.href, 'qzone-share', 'width=550,height=235');return false;">
            {{> "icons/qzone"}}
        </a>
        <a class="floating-header-share-wb" href="//service.weibo.com/share/share.php?url={{url absolute="true"}}&title={{encode title}}&pic={{image_url absolute="true"}}&searchPic=true" 
            onclick="window.open(this.href, 'weibo-share', 'width=550,height=235');return false;">
            {{> "icons/weibo"}}
        </a>
        <a class="floating-header-share-wx" href="javascript:;">
            <!--div class="popover-wrapper share-qrcode">
                <img src="//api.echoface.cn/utils/qrcode?text={{url absolute="true"}}&el=l&w=300&m=0">
            </div-->
            {{> "icons/weixin"}}
        </a>
        <a class="floating-header-share-tw" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
            onclick="window.open(this.href, 'share-twitter', 'width=550,height=235');return false;">
            {{> "icons/twitter"}}
        </a>
        <a class="floating-header-share-fb" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
            onclick="window.open(this.href, 'share-facebook','width=580,height=296');return false;">
            {{> "icons/facebook"}}
        </a>
    </div>
    <progress class="progress" value="0">
        <div class="progress-container">
            <span class="progress-bar"></span>
        </div>
    </progress>
</div>
